<div class="list size-max grid grid-cols-2 gap-3">
	{{#each user.favorites}}
	<section class="list-wrap size-full bg-teal-500 rounded-lg p-3 hover:bg-teal-400">
		<div class="landmark-wrapper grid justify-items-center mb-4" data-country="{{landmark_name}}">
			<p class="text-xl">{{landmark_name}}</p>
			<img src="" class="rounded-lg">
		</div>
		<p>Country: {{country_name}}</p>
		<p>State: {{state_name}}</p>
		<p>City: {{city_name}}</p>
    <button class="bg-red-400 mt-2 py-1 px-4" onclick="removeFav(this, {{id}})">Delete</button>
	</section>
	{{/each}}
	{{#unless user.favorites}}
		<h3 class="text-center p-4 col-span-full">No Favorites Have Been Added</h3>
	{{/unless}}
</div>


<script src="/js/list.js"></script>
